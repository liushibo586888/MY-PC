        <!-- <keep-alive> -->
        <!-- <keep-alive :include="cachePage">
                    <router-view></router-view>
                </keep-alive> -->
        <keep-alive v-if="cachePage.indexOf($route.name) > -1">
          <router-view></router-view>
        </keep-alive>
        <router-view v-else></router-view>
      </div>
