<script>
import shrinkableMenu from "./main-components/shrinkable-menu/shrinkable-menu.vue";
import tagsPageOpened from "./main-components/tags-page-opened.vue";
import breadcrumbNav from "./main-components/breadcrumb-nav.vue";
import fullScreen from "./main-components/fullscreen.vue";
import lockScreen from "./main-components/lockscreen/lockscreen.vue";
import messageTip from "./main-components/message-tip.vue";
import themeSwitch from "./main-components/theme-switch/theme-switch.vue";
import Cookies from "js-cookie";

import api from "@/api/index.js";
import util from "@/libs/util.js";
import storejs from "storejs";
import { mapState } from "vuex";

export default {
  components: {
    shrinkableMenu,
    tagsPageOpened,
    breadcrumbNav,
    fullScreen,
    lockScreen,
    messageTip,
    themeSwitch
  },
  data() {
    return {
      breadcrumblist:[], //面包屑数组
      modal1: false,
      slideMenu: [],
      isShowTips: false,
      messageTipsNum: 929,
      shrink: false,
      userName: "",
      isFullScreen: false,
      openedSubmenuArr: this.$store.state.app.openedSubmenuArr,
      formValidate: {
        OldPassword: "",
        NewPassword: ""
      },
      formValidateRule: {
        OldPassword: {
          required: true,
          message: "旧密码不可为空",
          trigger: "blur",
          type: "string"
        },
        NewPassword: {
          required: true,
          message: "新密码不可为空",
          trigger: "blur",
          type: "string"
        }
      }
    };
  },

  computed: {
    ...mapState({
      userMes: state => state.app.userMes,
      showLoading: state => state.app.showLoading
    }),
    menuList() {  
      return this.$store.state.app.menuList;
    }, 
    pageTagsList() {
      // console.log('this.$store.state.app.pageOpenedList', )
      let list = this.$store.state.app.pageOpenedList;   
      let arr = [];
      for (let i of list) {
        if (i.name !== "home_index") {
          arr.push(i);
        }
      } 
      return arr; // 打开的页面的页面对象
      // return this.$store.state.app.pageOpenedList; // 打开的页面的页面对象
    },
    currentPath() { 
      return this.$store.state.app.currentPath; // 当前面包屑数组
    },
    avatorPath() {
      // 设置头像
      this.$store.commit("setAvator", this.userMes.HeadImgStr);
      if (localStorage.getItem("userAvatar")) {
        return localStorage.getItem("userAvatar");
      } else {
        return "";
      }
    },
    cachePage() {
      return this.$store.state.app.cachePage;
    },
    lang() {
      return this.$store.state.app.lang;
    },
    menuTheme() {
      return this.$store.state.app.menuTheme;
    },
    mesCount() {
      return this.$store.state.app.messageCount;
    }
  },
  methods: {
    init() {
      let pathArr = util.setCurrentPath(this, this.$route.name);
      this.$store.commit("updateMenulist");
      if (pathArr.length >= 2) {
        this.$store.commit("addOpenSubmenu", pathArr[1].name);
      }
      this.userName = Cookies.get("user");
      let messageCount = 3;
      this.messageCount = messageCount.toString();
      this.checkTag(this.$route.name);
      this.QueryFistMenu();
      this.$store.commit("setMessageCount", 3);
    },
    changePassword() {
      let that = this;
      that.$refs.formValidate1.resetFields();
      that.modal1 = true;
    },
    editPasswordForm() {
      let that = this;
      that.$refs.formValidate1.validate(validate => {
        if (validate) {
          let data = {
            NewPassword: that.formValidate.NewPassword,
            OldPassword: that.formValidate.OldPassword,
            EmployeeID: that.userMes.EmployeeID
          };
          api.editEmployeePassword(data).then(response => {
            if (response.error_code === "Success") {
              that.$Message.success("密码修改成功");
              that.modal1 = false;
            } else {
              that.$Message.error(response.error_message);
            }
          });
        } else {
          this.$Message.error("有必填项为空");
        }
      });
    },
    resetForm() {
      let that = this;
      that.$refs.formValidate1.resetFields();
      that.modal1 = false;
    },
    toggleClick() {
      this.shrink = !this.shrink;
    },
    handleClickUserDropdown(name) {
      if (name === "ownSpace") {
        util.openNewPage(this, "ownspace_index");
        this.$router.push({
          name: "ownspace_index"
        });
      } else if (name === "loginout") {
        // 退出登录
        this.$store.commit("logout", this);
        this.$store.commit("clearOpenedSubmenu");
        this.$router.push({
          name: "login"
        });
      }
    },
    checkTag(name) {   
      let openpageHasTag = this.pageTagsList.some(item => {
        if (item.name === name) {
          //console.log(item)
          return true;
        }
      });  
      if (!openpageHasTag) {  
        //  解决关闭当前标签后再点击回退按钮会退到当前页时没有标签的问题
        util.openNewPage(
          this,
          name,
          this.$route.params || {},
          this.$route.query || {}
        );
      }
    }, 
    QueryFistMenu(){
       this.breadcrumblist = this.$store.state.app.currentPath;
       console.log(this.breadcrumblist);
    },
    handleSubmenuChange(val) {
      // console.log(val)
    },
    beforePush(name) {
      // if (name === 'accesstest_index') {
      //     return false;
      // } else {
      //     return true;
      // }
      return true;
    },
    fullscreenChange(isFullScreen) {
      // console.log(isFullScreen);
    },
    loginOff() {
      let that = this;
      // 清除cookie
      // let keys=document.cookie.match(/[^ =;]+(?=\=)/g)
      // if (keys) {
      //     for (let i = keys.length; i--;) {
      //         document.cookie = keys[i] + '=0;expires=' + new Date( 0).toUTCString()
      //     }
      // }
      that.$store.commit("logout", that);
      that.$store.commit("clearOpenedSubmenu");
      that.$router.push({
        name: "login"
      });
      sessionStorage.clear();
      localStorage.clear();

      // that.$router.replace('login')
    }
  },
  watch: {
    $route(to) { 
      this.$store.commit("setCurrentPageName", to.name);
      let pathArr = util.setCurrentPath(this, to.name);
      if (pathArr.length > 2) {
        this.$store.commit("addOpenSubmenu", pathArr[1].name);
      }
      this.checkTag(to.name);
      this.QueryFistMenu();
      localStorage.currentPageName = to.name;
    },
    lang() {
      util.setCurrentPath(this, this.$route.name); // 在切换语言时用于刷新面包屑
    }
  },
  mounted() {
    if (
      navigator.userAgent.match(
        /(phone|pad|pod|iPhone|iPod|ios|iPad|Android|Mobile|BlackBerry|IEMobile|MQQBrowser|JUC|Fennec|wOSBrowser|BrowserNG|WebOS|Symbian|Windows Phone)/i
      )
    ) {
      this.toggleClick();
    } else {
    }
    //   console.log(document.body.clientWidth)
    let that = this;
    this.init();
  },
  created() {
    // 显示打开的页面的列表
    let that = this;
    this.$store.commit("setOpenedList");
    that.slideMenu = JSON.parse(sessionStorage.getItem("menuList"));
  }
};
</script>
