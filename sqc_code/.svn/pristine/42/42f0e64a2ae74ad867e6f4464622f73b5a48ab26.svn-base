          <a href="http://123.157.218.226:8008" target="view_window" style="font-size: 18px">帮助</a>
         </div> 
       </div>
       </div>
      <!-- 标签 -->
      <div class="tags-con">
        <tags-page-opened :pageTagsList="pageTagsList"></tags-page-opened>
      </div>
    </div>
    <div class="single-page-con" :style="{left: shrink?'60px':'200px'}" style=" top:72px">
      <div class="bg" style="position:fixed; width:100%;height:100%;top:0;left:0; z-index: 99;" @click="isShowTips = !isShowTips" v-if="isShowTips == true"></div>
