.login{
    width: 100%;
    height: 100%;
    background-image: url('../../static/img/login-bg.jpg');
    background-size: cover;
    background-position: center;
    position: relative;
    &-con{
        position: absolute;
        width: 100%;
        top: 50%;
        transform: translateY(-80%);
        &-header{
            font-size: 16px;
            font-weight: 300;
            text-align: center;
            padding: 30px 0;
        }
        .form-con{
            width: 26%;
            margin: 30px auto 0 auto;
            padding: 10px 0 0;
            .input-icon{
                color: #fff;
                position: absolute;
                top: 50%;
                transform: translateY(-50%);
                left: 20px;
                font-size: 22px;
            }
            .input-username,
            .input-password{
                input{
                    background: transparent;
                    color: #fff;
                    border-radius: 40px;
                    height: 50px;
                    font-size: 16px;
                    padding: 0 0 0 50px;
                }
                .ivu-input-group-prepend{
                    border-radius: 40px 0 0 40px;
                    border-right: 0px;
                    background: transparent;
                }
            }
        }
        .login-tip{
            font-size: 10px;
            text-align: center;
            color: #c3c3c3;
        }
        .logo{
            position: relative;
            width: 305px;
            margin: 0 auto 125px auto;
            display: block;
        }
        .btn-box{
            position: relative;
            margin-top: 50px;
            padding: 0 20px;
            .btn-submit{
                border-radius: 20px;
                height: 51px;
                font-size: 22px;
                letter-spacing: 18px;
                background: -moz-linear-gradient(left, #7eae4e 0%, #8ac353 100%);
                background: -webkit-gradient(linear, left, right, color-stop(0%,#7eae4e), color-stop(100%,#8ac353));
                background: -webkit-linear-gradient(left, #7eae4e 0%,#8ac353 100%);
                background: -o-linear-gradient(left, #7eae4e 0%,#8ac353 100%);
                background: -ms-linear-gradient(left, #7eae4e 0%,#8ac353 100%);
                background: linear-gradient(to right, #7eae4e 0%,#8ac353 100%);
                border: 0;
                i{
                    letter-spacing: 0px;
                }
            }
        }
    }
}
