<template>
  <div class="QYjysh-container container">
    <div class="search-box">
      <Form :model="formItem" :label-width="0" inline @submit.native.prevent ref="searchForm" class="search-form">
        <row :gutter="20">
          <i-col span="3">
            <formItem prop="startDate">
              <DatePicker class="DatePicker_time" type="date" :options="options1" placeholder="开始日期" v-model="formItem.startDate" :clearable="false" :editable="false"></DatePicker>
            </formItem>
          </i-col>
          <i-col span="3">
            <formItem prop="endDate">
              <DatePicker class="DatePicker_time" type="date" :options="options1" placeholder="结束日期" v-model="formItem.endDate" :clearable="false" :editable="false"></DatePicker>
            </formItem>
          </i-col>
          <i-col span="3">
            <formItem prop="startDate2">
              <DatePicker class="DatePicker_time" type="date" :options="options1" placeholder="开始日期" v-model="formItem.startDate2" :clearable="false" :editable="false"></DatePicker>
            </formItem>
          </i-col>
          <i-col span="3">
            <formItem prop="endDate2">
              <DatePicker class="DatePicker_time" type="date" :options="options1" placeholder="结束日期" v-model="formItem.endDate2" :clearable="false" :editable="false"></DatePicker>
            </formItem>
          </i-col>

          <i-col span="3">
            <FormItem prop="sCityName">
              <Select v-model="formItem.CategoryName" placeholder="物资" :filterable="true">
                <Option value="all" @click.native="chooseCategory()">所有物资</Option>
                <Option v-for="item in CategoryList" :value="item.Name" :key="item.ID" @click.native="chooseCategory(item.Name,item.ID)">{{ item.Name }}</Option>
              </Select>
            </FormItem>
          </i-col>

          <i-col span="3">
            <FormItem prop="sCityName">
              <Select v-model="formItem.sCityName" placeholder="区域" :filterable="true">
                <Option v-for="item in storeList" :value="item.Name" :key="item.ID" @click.native="choose(item.Name,item.ID)">{{ item.Name }}</Option>
              </Select>
            </FormItem>
          </i-col>
          <i-col span="6">
            <formItem class="btn-box">
              <Button type="primary" class="btn" @click="searchList">查询</Button>
              <Button type="warning" class="btn" @click="resetSearch">重置</Button>
            </formItem>
          </i-col>
        </row>
      </Form>

    </div>
    <!-- 图表 -->
    <div class="form-box">
      <div class="charts">
        <div class="header">
          产品业绩排名
        </div>
        <div class="content">
          <tableLoadingPage :loading="spinShow"></tableLoadingPage>
          <div id="data_source_com" class="forms"></div>
        </div>
      </div>
    </div>
  </div>
</template>
<script>
import moment from "moment";
import { mapState } from "vuex";
import api from "@/api/index.js";
import echarts from "echarts";
export default {
  data() {
    return {
      //时间回到今天
      options1: {
        shortcuts: [
          {
            text: "今天",
            value() {
              return new Date();
            }
          }
        ]
      },
      // -----
      spinShow: true,
      formItem: {
        startDate: new Date(),
        endDate: new Date(),
        startDate2: new Date(),
        endDate2: new Date(),
        sCity: "",
        sCityName: "",
        CategoryName: "all",
        CategoryID: ""
      },
      list: [],
      storeList: [],
      CategoryList: []
    };
  },
  computed: {
    ...mapState({
      userMes: state => state.app.userMes,
      authorList: state => state.app.authorList,
      tableRows: state => state.app.tableRows
    }),
    setTableHeight() {
      let h = 440;
      if (window.innerHeight > 900) {
        h = 540;
      }
      return h / 768 * window.innerHeight;
    },
    setAuthor() {
      // 判断用户是否有查看客户详情权限
      let that = this;
      let pageName = that.$route.name;
      let list = that.authorList[pageName];
      if (list) {
        for (let i of list) {
          if (i.Name === "增加") {
            return i.IsVisible;
            break;
          }
        }
      } else {
        return false;
      }
    }
  },
  methods: {
    choose(name, id) {
      this.formItem.sCity = id;
    },
    chooseCategory(name, id) {
      if (name === undefined && id === undefined) {
        this.formItem.CategoryName = "所有物资";
        this.formItem.CategoryID = null;
      } else {
        this.formItem.CategoryName = name;
        this.formItem.CategoryID = id;
      }
    },
    searchList() {
      let that = this;
      if (that.formItem.startDate && that.formItem.endDate) {
        // 两者同时存在
        if (Number(that.formItem.startDate) > Number(that.formItem.endDate)) {
          that.$Message.error("开始日期不得大于结束日期");
          return false;
        }
      }
      if (that.formItem.startDate2 && that.formItem.endDate2) {
        // 两者同时存在
        if (Number(that.formItem.startDate2) > Number(that.formItem.endDate2)) {
          that.$Message.error("开始日期不得大于结束日期");
          return false;
        }
      }
      that.getList();
    },
    resetSearch() {
      let that = this;
      that.$refs.searchForm.resetFields();
      that.getList();
    },
    setEcharts(CustNum1Data, CustNum2Data, barName) {
      let that = this;
      that.$nextTick(() => {
        var dataSourcePie = echarts.init(
          document.getElementById("data_source_com")
        );
        let optionPie = {
          color: ["#003366", "#e5323e"],
          tooltip: {
            trigger: "axis",
            axisPointer: {
              type: "shadow"
            }
          },
          legend: {
            data: ["第一时间段", "第二时间段"]
          },
          toolbox: {
            show: true,
            orient: "vertical",
            left: "right",
            top: "center",
            feature: {
              mark: { show: true },
              dataView: { show: true, readOnly: false },
              magicType: {
                show: true,
                type: ["line", "bar", "stack", "tiled"]
              },
              restore: { show: true },
              saveAsImage: { show: true }
            }
          },
          calculable: true,
          xAxis: [
            {
              type: "category",
              axisTick: { show: false },
              data: barName,
              axisLabel: {
                interval: 0, //横轴信息全部显示
                rotate: -30 //-30度角倾斜显示
              }
            }
          ],
          yAxis: [
            {
              type: "value"
            }
          ],
          series: [
            {
              name: "第一时间段",
              type: "bar",
              barGap: 0,
              data: CustNum1Data
            },
            {
              name: "第二时间段",
              type: "bar",
              data: CustNum2Data
            }
          ]
        };

        dataSourcePie.setOption(optionPie);
        that.spinShow = false;
        window.addEventListener("resize", function() {
          dataSourcePie.resize();
        });
      });
    },
    getList() {
      setTimeout(() => {
        let that = this;
        let data = {
          StartDate: that.formItem.startDate,
          EndDate: that.formItem.endDate,
          StartDate2: that.formItem.startDate2,
          EndDate2: that.formItem.endDate2,
          sCategoryId: that.formItem.CategoryID,
          sCity: that.formItem.sCity
        };
        if (data.StartDate) {
          data.StartDate = moment(data.StartDate).format("YYYY-MM-DD");
        }
        if (data.EndDate) {
          data.EndDate = moment(data.EndDate).format("YYYY-MM-DD");
        }
        if (data.StartDate2) {
          data.StartDate2 = moment(data.StartDate2).format("YYYY-MM-DD");
        }
        if (data.EndDate2) {
          data.EndDate2 = moment(data.EndDate2).format("YYYY-MM-DD");
        }
        that.spinShow = true;
        api.getProductAchievement(data).then(response => {
          if (response.error_code === "Success") {
            that.list = response.data.list;
            that.setPieData();
          } else {
            that.$Message.error(response.error_message);
          }
        });
      }, 200);
    },
    setPieData() {
      let that = this;
      let CustNum1Data = [];
      let CustNum2Data = [];
      let barName = [];
      for (let i in that.list) {
        // 柱状图
        var a = {
          CustNum1: that.list[i].CountAmount1,
          CustNum2: that.list[i].CountAmount2,
          Name: that.list[i].Name
        };
        CustNum1Data.push(a.CustNum1);
        CustNum2Data.push(a.CustNum2);
        barName.push(a.Name);
      }
      that.setEcharts(CustNum1Data, CustNum2Data, barName);
    },
    // 获取物资列表
    getCategory() {
      let that = this;
      api.getCategory().then(response => {
        if (response.error_code === "Success") {
          that.CategoryList = response.data.list;
        } else {
          that.$Message.error(response.error_message);
        }
      });
    },
    // 获取区域列表
    getStore() {
      let that = this;
      api.GetAllCityInfo().then(response => {
        if (response.error_code === "Success") {
          that.storeList = response.data.list;
          that.formItem.sCityName = that.storeList[0].Name;
          that.formItem.sCity = that.storeList[0].ID;
        } else {
          that.$Message.error(response.error_message);
        }
      });
    }
  },
  mounted() {
    let that = this;
    that.getStore();
    that.getCategory();
    that.getList();
  }
};
</script>
